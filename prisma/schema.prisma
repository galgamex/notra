  id         Int             @id @default(autoincrement())
  parentId   Int?            @map("parent_id")
  prevId     Int?            @map("prev_id")
  siblingId  Int?            @map("sibling_id")
  childId    Int?            @map("child_id")
  title      String
  type       CatalogNodeType
  url        String?
  openWindow Boolean         @default(false) @map("open_window")

